  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug E2E Tests (watch)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeVersion": "18",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "run",
        "e2e-watch"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Unit Tests (watch)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeVersion": "18",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "run",
        "unit-watch"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}